{
  "name": "claude-runner",
  "displayName": "Claude Runner",
  "description": "Open a new terminal and run Claude Code from any folder",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "pnpm dlx @vscode/vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zirke/claude-runner"
  },
  "license": "MIT",
  "author": {
    "name": "Chris Cook",
    "url": "https://zirkelc.dev"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "claudeRunner.runClaude",
        "title": "Run Claude"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "claudeRunner.runClaude",
          "group": "navigation",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^4.9.4"
  }
}